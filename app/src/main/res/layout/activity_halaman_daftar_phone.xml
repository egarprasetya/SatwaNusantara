        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/img_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/logosatwa"
            android:padding="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/img_namalogo"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/namalogo"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:errorEnabled="true"
            android:background="#8Cffffff"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_daftar_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama"
                android:inputType="text"
                android:textColor="@color/warnaGelap"
                android:textColorHint="@color/warnaGray"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:background="#8Cffffff"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_daftar_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Telepon"
                android:inputType="text"
                android:textColor="@color/warnaGelap"
                android:textColorHint="@color/warnaGray"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

            </RelativeLayout>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"
            android:background="#8Cffffff"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_daftar_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Verifikasi"
                android:inputType="text"
                android:textColor="@color/warnaGelap"
                android:textColorHint="@color/warnaGray"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_verifikasi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/layout_daftar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="48dp"
        android:background="@color/colorPrimary"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Verifikasi Code"
        android:textAllCaps="false"
        android:textColor="@color/warnaPutih"
        android:textSize="24sp" />
    <Button
        android:id="@+id/btn_datftarDaftar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/layout_daftar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="48dp"
        android:background="#008080"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Daftar"
        android:textAllCaps="false"
        android:textColor="@color/warnaPutih"
        android:textSize="24sp" />

    <!--    android:background="@drawable/bg_oval_white"-->



    <ImageView
        android:id="@+id/img_logo2"
        android:layout_width="180dp"
        android:layout_height="80dp"

        android:layout_below="@id/btn_datftarDaftar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/style_lingkaran"
        android:padding="8dp"
        android:src="@drawable/logounejxl" />

    <RelativeLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warnaTransparanAbu"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/loading_daftar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:indeterminateTint="@color/warnaPutih" />

    </RelativeLayout>


    <Button
        android:visibility="gone"
        android:id="@+id/btn_info"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="37dp"
        android:background="@drawable/circle"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="i"
        android:textAllCaps="false"
        android:textColor="@color/warnaTerang"
        android:textSize="24sp" />

    <Button

        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp"
        android:layout_marginRight="37dp"
        android:background="@drawable/circle"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="x"
        android:textAllCaps="false"
        android:textColor="@color/warnaTerang"
        android:textSize="24sp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/msgregister"
        android:layout_width="224dp"
        android:layout_height="156dp"
        android:layout_below="@id/layout_daftar"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="85dp"
        android:layout_marginRight="40dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/email" />


</RelativeLayout>

