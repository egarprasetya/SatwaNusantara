<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.Pengajuan.HomePengajuan"
    tools:showIn="@layout/app_bar_pengajuan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container_volunteer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/nav_volunteer">

        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/warnaBottom"
            app:itemIconTint="@color/warnaPutih"
            app:itemTextColor="@color/warnaPutih"
            app:menu="@menu/menu_nav_volunteer">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn_infoHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="37dp"
            android:background="@drawable/circle"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="i"
            android:textAllCaps="false"
            android:textColor="@color/warnaTerang"
            android:textSize="24sp"
            android:visibility="gone" />

